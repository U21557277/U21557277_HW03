@model U21557277_HW03.Models.FileModel
@{
    ViewBag.Title = "Index";
}
<table>
    <tr>
        <td>
            <div style=" padding-bottom: 60px;">
                <h2>INF 272 Media</h2>

                <h4>All about INF 272 assessments</h4>

                <div class="card" style=" padding-bottom:50px; text-align:left; width: 850px; height: 180px; border: 0.5px solid #000000; background: #E1AD9D;
             overflow: visible; ">
                    <p style="margin-left:1%; margin-top:1%;">
                        <h3>Description</h3>
                        This page will help you save all your important documents for INF 272. You can upload documents, images and videos that you have used to keep
                        them safe for later use.This will be very useful as you can always use the material you upload to refer later on in the year.
                        <br />
                        How it works is: You select the type of file you wish to upload (pdf, image or video), then you click on the submit button, your file will
                        be uploaded. You can then download or delete a file if you wish do so from the list of files you have uploaded.
                    </p>
                </div>
            </div>
        </td>
        <td>   </td>
        <td>


            <div style="align-content:start; margin-left: 6.5%;">

                <h2>Option Selection</h2>

                <div>
                    <form id="form1" method="post">

                        <table>
                            <tr class="form-horizontal">

                                
                                @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                                {

                                    <span>Documents </span>
                                    @Html.RadioButton("FileType", "Documents", true)
                                    <br />
                                    <span>Images </span>
                                    @Html.RadioButton("FileType", "Images", false)
                                    <br />
                                    <span>Videos </span>
                                    @Html.RadioButton("FileType", "Videos", false)


                                }

                            </tr>
                        </table>

                        <br />

                        <div style="margin-left:2%">
                            @using (Html.BeginForm("Index", "Files", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div>@Html.TextBoxFor(model => model.Files, "", new { @type = "file", @multiple = "multiple" })</div>
                                <br />
                                <div><input type="submit" value="Submit" /></div>

                            }

                        </div>


                    </form>
                </div>
            </div>
        </td>
    </tr>
</table>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

